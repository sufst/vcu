{
    "version": "2.0.0",
    "tasks": [
        // make build task (DEBUG)
        {
            "label": "build (DEBUG)",
            "type": "shell",
            "command": "make",
            "args": [
                "-j$(nproc)",
            ],
            "problemMatcher": "$gcc",
            "group": {
                "kind": "build",
                "isDefault": true
            },
        },
        // make build task (RELEASE)
        {
            "label": "build (RELEASE)",
            "type": "shell",
            "command": "make",
            "args": [
                "-j$(nproc)",
                "DEBUG=0",
            ],
            "problemMatcher": "$gcc",
            "group": {
                "kind": "build",
                "isDefault": true
            },
        },
        // clean build directory
        {
            "label": "clean",
            "type": "shell",
            "command": "make clean"
        },
        // flash VCU.bin
        {
            "label": "flash",
            "type": "shell",
            "dependsOn": "build",
            "command": "make flash",
        },
        // open STM32CubeMX
        {
            "label": "STM32CubeMX",
            "type": "shell",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            },
            "osx": {
                "command": "/Applications/STMicroelectronics/STM32CubeMX.app/Contents/MacOs/STM32CubeMX",
            },
            "linux": {
                "command": "?",
            },
            "args": [
                "${workspaceRoot}/VCU.ioc",
            ]
        },
        // run code generation script (fix STM32CubeMX generated makefile)
        {
            "label": "generate makefile",
            "type": "shell",
            "command": "${workspaceFolder}/build.sh",
        }
    ]
}