{
    "version": "2.0.0",
    "tasks": [
        // make build task (DEBUG)
        {
            "label": "build (DEBUG)",
            "type": "shell",
            "problemMatcher": "$gcc",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "osx": {
                "command": "make",
                "args": [
                    "-j$(nproc)",
                ]
            },
            "linux": {
                "command": "make",
                "args": [
                    "-j$(nproc)",
                ]
            },
            "windows": {
                "command": "make",
            }
        },
        // make build task (RELEASE)
        {
            "label": "build (RELEASE)",
            "type": "shell",
            "problemMatcher": "$gcc",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "osx": {
                "command": "make",
                "args": [
                    "-j$(nproc)",
                    "DEBUG=0",
                    "OPT=-O3",
                ]
            },
            "linux": {
                "command": "make",
                "args": [
                    "-j$(nproc)",
                    "DEBUG=0",
                    "OPT=-O3",
                ]
            },
            "windows": {
                "command": "make",
                "args": [
                    "DEBUG=0",
                    "OPT=-O3",
                ]
            },
        },
        // clean build directory
        {
            "label": "clean",
            "type": "shell",
            "command": "make clean"
        },
        // flash VCU.bin
        {
            "label": "flash",
            "type": "shell",
            "dependsOn": "build",
            "command": "st-flash",
            "args": [
                "write",
                "build/VCU.bin",
                "0x08000000",   // flash memory address
            ]
        },
        // open STM32CubeMX
        {
            "label": "STM32CubeMX",
            "type": "shell",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            },
            "osx": {
                "command": "/Applications/STMicroelectronics/STM32CubeMX.app/Contents/MacOs/STM32CubeMX",
            },
            "linux": {
                "command": "?",
            },
            "windows": {
                "command": "?",
            },
            "args": [
                "${workspaceRoot}/VCU.ioc",
            ]
        },
        // run code generation script (fix STM32CubeMX generated makefile)
        {
            "label": "generate makefile",
            "type": "shell",
            "command": "python3 code_gen.py",
        }
    ]
}